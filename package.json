{
  "name": "@nes-digital-service/express-prometheus-middleware",
  "description": "RED/USE metrics middleware for express applications",
  "repository": "github:NES-Digital-Service/express-prometheus-middleware",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/**.test.**"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest --coverage",
    "build": "tsc",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "response-time": "^2.3.2",
    "url-value-parser": "^2.0.0"
  },
  "peerDependencies": {
    "prom-client": "^14.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/response-time": "^2.3.5",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.2"
  },
  "ts-standard": {
    "project": "tsconfig.json",
    "env": [
      "jest"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "./*.test.ts",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
